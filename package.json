{
  "name": "matcha-monorepo",
  "type": "commonjs",
  "private": true,
  "workspaces": [
    "matcha-app",
    "matcha-api"
  ],
  "scripts": {
    "dev": "yarn mongo:start && turbo run dev",
    "dev:api": "yarn mongo:start && turbo run dev --filter=matcha-api",
    "dev:app": "turbo run dev --filter=matcha-app",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "prepare": "husky install",
    "mongo:start": "docker compose up -d mongo",
    "mongo:stop": "docker compose stop mongo",
    "mongo:logs": "docker compose logs -f mongo",
    "down": "docker compose down"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-native": "^5.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.6.2",
    "turbo": "2.5.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@1.22.19",
  "dependencies": {
    "json5": "^2.2.3"
  }
}
